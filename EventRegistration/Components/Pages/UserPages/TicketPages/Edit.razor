@page "/tickets/edit"
@using Microsoft.EntityFrameworkCore
@using EventRegistration.Domain
@inject IDbContextFactory<EventRegistration.Data.EventRegistrationContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Edit Ticket</PageTitle>

<div class="page-container">
    <div class="page-header">
        <h1>Edit Ticket</h1>
    </div>

    @if (selectedTicket is null)
    {
        <div class="loading-container">
            <p class="loading-text">Loading...</p>
        </div>
    }
    else
    {
        <div class="form-container">
            <h2 class="section-title">Ticket Information</h2>

            <EditForm method="post" Model="selectedTicket" OnValidSubmit="UpdateTicket" FormName="edit" Enhance>
                <DataAnnotationsValidator />
                <ValidationSummary class="validation-summary" role="alert" />
                <input type="hidden" name="selectedTicket.Id" value="@selectedTicket.Id" />
                <input type="hidden" name="selectedTicket.EventId" value="@selectedTicket.EventId" />

                <div class="form-group">
                    <label for="price" class="form-label">Price:</label>
                    <InputNumber id="price" @bind-Value="selectedTicket.Price" class="form-input" />
                    <ValidationMessage For="() => selectedTicket.Price" class="validation-message" />
                </div>

                <div class="form-group">
                    <label for="type" class="form-label">Type:</label>
                    <InputSelect id="type" @bind-Value="selectedTicket.Type" class="form-input">
                        <option value="">Select Type</option>
                        <option value="Normal">Normal</option>
                        <option value="VIP">VIP</option>
                    </InputSelect>
                    <ValidationMessage For="() => selectedTicket.Type" class="validation-message" />
                </div>

                <div class="form-group">
                    <label for="createdby" class="form-label">Created By:</label>
                    <InputText id="createdby" @bind-Value="selectedTicket.CreatedBy" class="form-input" />
                    <ValidationMessage For="() => selectedTicket.CreatedBy" class="validation-message" />
                </div>

                <div class="form-group">
                    <label for="updatedby" class="form-label">Updated By:</label>
                    <InputText id="updatedby" @bind-Value="selectedTicket.UpdatedBy" class="form-input" />
                    <ValidationMessage For="() => selectedTicket.UpdatedBy" class="validation-message" />
                </div>

                <div class="form-actions">
                    <button type="submit" class="btn btn-primary">Save Changes</button>
                    <a href="@GetBackLink()" class="btn btn-secondary">Cancel</a>
                </div>
            </EditForm>
        </div>

        <div class="back-link">
            <a href="@GetBackLink()">← Back to Ticket List</a>
        </div>
    }
</div>

@code {
    [SupplyParameterFromQuery]
    private int Id { get; set; }

    [SupplyParameterFromForm]
    private Ticket? selectedTicket { get; set; }

    protected override async Task OnInitializedAsync()
    {
        if (selectedTicket is null)
        {
            using var context = DbFactory.CreateDbContext();
            selectedTicket = await context.Ticket.FirstOrDefaultAsync(m => m.Id == Id);

            if (selectedTicket is null)
            {
                NavigationManager.NavigateTo("notfound");
            }
        }
    }

    private async Task UpdateTicket()
    {
        using var context = DbFactory.CreateDbContext();

        // Get original to preserve DateCreated
        var originalTicket = await context.Ticket.AsNoTracking().FirstOrDefaultAsync(t => t.Id == selectedTicket!.Id);
        if (originalTicket != null)
        {
            selectedTicket!.DateCreated = originalTicket.DateCreated;
        }

        selectedTicket!.DateUpdated = DateTime.Now;

        context.Ticket.Update(selectedTicket);

        try
        {
            await context.SaveChangesAsync();
        }
        catch (DbUpdateConcurrencyException)
        {
            if (!TicketExists(selectedTicket!.Id))
            {
                NavigationManager.NavigateTo("notfound");
            }
            else
            {
                throw;
            }
        }

        NavigationManager.NavigateTo($"/events/{selectedTicket.EventId}/tickets");
    }

    private bool TicketExists(int id)
    {
        using var context = DbFactory.CreateDbContext();
        return context.Ticket.Any(e => e.Id == id);
    }

    private string GetBackLink()
    {
        return selectedTicket != null ? $"/events/{selectedTicket.EventId}/tickets" : "/events";
    }
}
