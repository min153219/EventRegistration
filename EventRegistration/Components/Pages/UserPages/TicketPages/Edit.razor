@page "/tickets/edit"
@using Microsoft.EntityFrameworkCore
@using EventRegistration.Domain
@using EventRegistration.Data
@inject IDbContextFactory<EventRegistration.Data.EventRegistrationContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Edit Ticket</PageTitle>

<link rel="stylesheet" href="Edit.razor.css" />

<div class="edit-container">
    <h1 class="page-title">Edit Ticket</h1>
    <hr class="divider" />

    @if (selectedTicket is null)
    {
        <div class="loading-container">
            <div class="spinner"></div>
            <p class="loading-text"><em>Loading ticket details...</em></p>
        </div>
    }
    else
    {
        <div class="edit-layout">
            <div class="form-card">
                <EditForm method="post" Model="selectedTicket" OnValidSubmit="UpdateTicket" FormName="edit" Enhance>
                    <DataAnnotationsValidator />
                    <ValidationSummary class="validation-summary" role="alert" />

                    <input type="hidden" name="selectedTicket.Id" value="@selectedTicket.Id" />
                    <input type="hidden" name="selectedTicket.EventId" value="@selectedTicket.EventId" />

                    <div class="form-row">
                        <div class="form-group">
                            <label for="price" class="form-label">
                                Price: <span class="required">*</span>
                            </label>
                            
                                
                            <InputNumber id="price" @bind-Value="selectedTicket.Price" class="form-control" step="0.01" name="selectedTicket.Price" />

                            <ValidationMessage For="() => selectedTicket.Price" class="text-danger" />
                        </div>

                        <div class="form-group">
                            <label for="type" class="form-label">
                                Ticket Type: <span class="required">*</span>
                            </label>
                            <InputSelect id="type" @bind-Value="selectedTicket.Type" class="form-control" name="selectedTicket.Type">
                                <option value="">Select Type</option>
                                <option value="VIP">VIP</option>
                                <option value="General Admission">General Admission</option>
                                <option value="Student">Student</option>
                                <option value="Early Bird">Early Bird</option>
                                <option value="Group">Group</option>
                            </InputSelect>
                            <ValidationMessage For="() => selectedTicket.Type" class="text-danger" />
                        </div>
                    </div>

                    <div class="audit-section">
                        <div class="audit-title">Audit Information</div>

                        <div class="form-row">
                            <div class="form-group">
                                <label for="createdby" class="form-label">Created By:</label>
                                <input type="text" value="@selectedTicket.CreatedBy" class="form-control" disabled />
                            </div>

                            <div class="form-group">
                                <label for="datecreated" class="form-label">Date Created:</label>
                                <input type="text" value="@selectedTicket.DateCreated.ToString("yyyy-MM-dd HH:mm")" class="form-control" disabled />
                            </div>
                        </div>

                        <div class="form-row">
                            <div class="form-group">
                                <label for="updatedby" class="form-label">Updated By:</label>
                                <input type="text" value="@selectedTicket.UpdatedBy" class="form-control" disabled />
                            </div>

                            <div class="form-group">
                                <label for="dateupdated" class="form-label">Last Updated:</label>
                                <input type="text" value="@selectedTicket.DateUpdated.ToString("yyyy-MM-dd HH:mm")" class="form-control" disabled />
                            </div>
                        </div>
                    </div>

                    <div class="form-actions">
                        <button type="submit" class="btn btn-primary">
                            Save Changes
                        </button>
                        <a href="@GetBackLink()" class="btn btn-secondary">
                            Cancel
                        </a>
                    </div>
                </EditForm>
            </div>
        </div>
    }
</div>

@code {
    [SupplyParameterFromQuery]
    private int Id { get; set; }

    [SupplyParameterFromForm]
    private Ticket? selectedTicket { get; set; }

    protected override async Task OnInitializedAsync()
    {
        if (selectedTicket is null)
        {
            using var context = DbFactory.CreateDbContext();
            selectedTicket = await context.Ticket
                .FirstOrDefaultAsync(m => m.Id == Id);

            if (selectedTicket is null)
            {
                NavigationManager.NavigateTo("notfound");
            }
        }
    }

    private async Task UpdateTicket()
    {
        using var context = DbFactory.CreateDbContext();

        // Get original to preserve DateCreated and CreatedBy
        var originalTicket = await context.Ticket.AsNoTracking().FirstOrDefaultAsync(t => t.Id == selectedTicket!.Id);
        if (originalTicket != null)
        {
            selectedTicket!.DateCreated = originalTicket.DateCreated;
            selectedTicket!.CreatedBy = originalTicket.CreatedBy;
        }

        selectedTicket!.DateUpdated = DateTime.Now;

        context.Ticket.Update(selectedTicket);

        try
        {
            await context.SaveChangesAsync();
        }
        catch (DbUpdateConcurrencyException)
        {
            if (!TicketExists(selectedTicket!.Id))
            {
                NavigationManager.NavigateTo("notfound");
            }
            else
            {
                throw;
            }
        }

        NavigationManager.NavigateTo($"/events/{selectedTicket.EventId}/tickets");
    }

    private bool TicketExists(int id)
    {
        using var context = DbFactory.CreateDbContext();
        return context.Ticket.Any(e => e.Id == id);
    }

    private string GetBackLink()
    {
        return selectedTicket != null ? $"/events/{selectedTicket.EventId}/tickets" : "/events";
    }
}