@page "/payments/edit"
@using Microsoft.EntityFrameworkCore
@using EventRegistration.Domain
@inject IDbContextFactory<EventRegistration.Data.EventRegistrationContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Edit</PageTitle>

<h1>Edit</h1>

<h2>Payment</h2>
<hr />
@if (selectedPayment is null)
{
    <p><em>Loading...</em></p>
}
else
{
    <div class="row">
        <div class="col-md-4">
            <EditForm method="post" Model="selectedPayment" OnValidSubmit="UpdatePayment" FormName="edit" Enhance>
                <DataAnnotationsValidator />
                <ValidationSummary role="alert" />
                <input type="hidden" name="selectedPayment.Id" value="@selectedPayment.Id" />
                <input type="hidden" name="selectedPayment.RegistrationId" value="@selectedPayment.RegistrationId" />

                <div class="mb-3">
                    <label for="amount" class="form-label">Amount:</label>
                    <InputNumber id="amount" @bind-Value="selectedPayment.Amount" class="form-control" />
                    <ValidationMessage For="() => selectedPayment.Amount" class="text-danger" />
                </div>
                <div class="mb-3">
                    <label for="paymentmethod" class="form-label">PaymentMethod:</label>
                    <InputText id="paymentmethod" @bind-Value="selectedPayment.PaymentMethod" class="form-control" />
                    <ValidationMessage For="() => selectedPayment.PaymentMethod" class="text-danger" />
                </div>
                <div class="mb-3">
                    <label for="currency" class="form-label">Currency:</label>
                    <InputText id="currency" @bind-Value="selectedPayment.Currency" class="form-control" />
                    <ValidationMessage For="() => selectedPayment.Currency" class="text-danger" />
                </div>
                <div class="mb-3">
                    <label for="paymentdate" class="form-label">PaymentDate:</label>
                    <InputDate id="paymentdate" @bind-Value="selectedPayment.PaymentDate" class="form-control" />
                    <ValidationMessage For="() => selectedPayment.PaymentDate" class="text-danger" />
                </div>
                <div class="mb-3">
                    <label for="createdby" class="form-label">CreatedBy:</label>
                    <InputText id="createdby" @bind-Value="selectedPayment.CreatedBy" class="form-control" />
                    <ValidationMessage For="() => selectedPayment.CreatedBy" class="text-danger" />
                </div>
                <div class="mb-3">
                    <label for="updatedby" class="form-label">UpdatedBy:</label>
                    <InputText id="updatedby" @bind-Value="selectedPayment.UpdatedBy" class="form-control" />
                    <ValidationMessage For="() => selectedPayment.UpdatedBy" class="text-danger" />
                </div>
                <button type="submit" class="btn btn-primary">Save</button>]
            </EditForm>
        </div>
    </div>
}

<div>
    <a href="@GetBackLink()">Back to List</a>
</div>

@code {
    [SupplyParameterFromQuery]
    private int Id { get; set; }

    [SupplyParameterFromForm]
    private Payment? selectedPayment { get; set; }

    protected override async Task OnInitializedAsync()
    {
        if (selectedPayment is null)
        {
            using var context = DbFactory.CreateDbContext();
            selectedPayment = await context.Payment.FirstOrDefaultAsync(m => m.Id == Id);

            if (selectedPayment is null)
            {
                NavigationManager.NavigateTo("notfound");
            }
        }
    }

    private async Task UpdatePayment()
    {
        using var context = DbFactory.CreateDbContext();

        // Get original to preserve DateCreated
        var originalPayment = await context.Payment.AsNoTracking().FirstOrDefaultAsync(p => p.Id == selectedPayment!.Id);
        if (originalPayment != null)
        {
            selectedPayment!.DateCreated = originalPayment.DateCreated;
        }

        selectedPayment!.DateUpdated = DateTime.Now;

        context.Payment.Update(selectedPayment);

        try
        {
            await context.SaveChangesAsync();
        }
        catch (DbUpdateConcurrencyException)
        {
            if (!PaymentExists(selectedPayment!.Id))
            {
                NavigationManager.NavigateTo("notfound");
            }
            else
            {
                throw;
            }
        }

        NavigationManager.NavigateTo(GetBackLink());
    }

    private bool PaymentExists(int id)
    {
        using var context = DbFactory.CreateDbContext();
        return context.Payment.Any(e => e.Id == id);
    }

    private string GetBackLink()
    {
        if (selectedPayment?.RegistrationId != null)
        {
            using var context = DbFactory.CreateDbContext();
            var registration = context.Registration.FirstOrDefault(r => r.Id == selectedPayment.RegistrationId);
            if (registration != null)
            {
                return $"/events/{registration.EventId}/payments";
            }
        }
        return "/payments";
    }
}