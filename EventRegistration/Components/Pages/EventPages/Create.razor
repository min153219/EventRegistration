@page "/events/create"
@using Microsoft.EntityFrameworkCore
@using EventRegistration.Domain
@using Microsoft.AspNetCore.Components.Authorization
@inject IDbContextFactory<EventRegistration.Data.EventRegistrationContext> DbFactory
@inject NavigationManager NavigationManager
@inject AuthenticationStateProvider AuthenticationStateProvider

<PageTitle>Create Event</PageTitle>

<div class="container mt-4">
    <h1>Create New Event</h1>
    <p class="text-muted">Fill in the details below to create your event. It will be submitted for admin approval.</p>
    <hr />

    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow-sm">
                <div class="card-body">
                    <EditForm method="post" Model="@newEvent" OnValidSubmit="@AddEvent" FormName="CreateEventForm" Enhance>
                        <DataAnnotationsValidator />
                        <ValidationSummary class="alert alert-danger" role="alert" />

                        <div class="mb-3">
                            <label for="title" class="form-label">Event Title: <span class="text-danger">*</span></label>
                            <InputText id="title" @bind-Value="newEvent.Title" class="form-control" placeholder="Enter event title" />
                            <ValidationMessage For="() => newEvent.Title" class="text-danger" />
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="type" class="form-label">Event Type: <span class="text-danger">*</span></label>
                                <InputSelect id="type" @bind-Value="newEvent.Type" class="form-control">
                                    <option value="">Select Type</option>
                                    <option value="Physical">Physical</option>
                                    <option value="Virtual">Virtual</option>
                                    <option value="Hybrid">Hybrid</option>
                                </InputSelect>
                                <ValidationMessage For="() => newEvent.Type" class="text-danger" />
                            </div>

                            <div class="col-md-6 mb-3">
                                <label for="eventdate" class="form-label">Event Date: <span class="text-danger">*</span></label>
                                <InputDate id="eventdate" @bind-Value="newEvent.EventDate" class="form-control" />
                                <ValidationMessage For="() => newEvent.EventDate" class="text-danger" />
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="location" class="form-label">Location: <span class="text-danger">*</span></label>
                                <InputText id="location" @bind-Value="newEvent.Location" class="form-control" placeholder="Event location" />
                                <ValidationMessage For="() => newEvent.Location" class="text-danger" />
                            </div>

                            <div class="col-md-6 mb-3">
                                <label for="totalcapacity" class="form-label">Total Capacity: <span class="text-danger">*</span></label>
                                <InputNumber id="totalcapacity" @bind-Value="newEvent.TotalCapacity" class="form-control" placeholder="Maximum attendees" />
                                <ValidationMessage For="() => newEvent.TotalCapacity" class="text-danger" />
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="category" class="form-label">Category: <span class="text-danger">*</span></label>
                            <InputText id="category" @bind-Value="newEvent.Category" class="form-control" placeholder="e.g., Conference, Workshop, Seminar" />
                            <ValidationMessage For="() => newEvent.Category" class="text-danger" />
                        </div>

                        <div class="mb-3">
                            <label for="description" class="form-label">Description:</label>
                            <InputTextArea id="description" @bind-Value="newEvent.Description" class="form-control" rows="4" placeholder="Describe your event..." />
                            <ValidationMessage For="() => newEvent.Description" class="text-danger" />
                        </div>

                        <div class="alert alert-info">
                            <i class="bi bi-info-circle me-2"></i>
                            <strong>Note:</strong> Your event will be submitted with "Pending" status and requires admin approval before it becomes active.
                        </div>

                        <div class="d-flex gap-2 mt-4">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-plus-circle me-1"></i>Create Event
                            </button>
                            <a href="/events" class="btn btn-secondary">
                                <i class="bi bi-x-circle me-1"></i>Cancel
                            </a>
                        </div>
                    </EditForm>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card shadow-sm bg-light">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="bi bi-lightbulb me-2"></i>Tips for Creating Events
                    </h5>
                    <ul class="mb-0">
                        <li>Use a clear and descriptive title</li>
                        <li>Provide accurate date and location</li>
                        <li>Set a realistic capacity</li>
                        <li>Write a detailed description to attract attendees</li>
                        <li>Double-check all information before submitting</li>
                    </ul>
                </div>
            </div>

            <div class="card shadow-sm mt-3">
                <div class="card-body">
                    <h6 class="card-title text-warning">
                        <i class="bi bi-clock-history me-2"></i>Approval Process
                    </h6>
                    <p class="card-text small mb-0">
                        After submission, your event will be reviewed by an administrator.
                        You'll be notified once it's approved or if any changes are needed.
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    [SupplyParameterFromForm]
    private Event newEvent { get; set; } = new();

    private async Task AddEvent()
    {
        // Get the current user's email
        var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
        var currentUserEmail = authState.User.Identity?.Name;

        // Set timestamps and user info automatically
        newEvent.DateCreated = DateTime.Now;
        newEvent.DateUpdated = DateTime.Now;
        newEvent.CreatedBy = currentUserEmail;
        newEvent.UpdatedBy = currentUserEmail;
        newEvent.Status = "Pending"; // Set default status to Pending for admin approval

        using var context = DbFactory.CreateDbContext();
        context.Event.Add(newEvent);
        await context.SaveChangesAsync();

        NavigationManager.NavigateTo("/events");
    }
}