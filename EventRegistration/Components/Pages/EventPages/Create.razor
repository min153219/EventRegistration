@page "/events/create"
@using Microsoft.EntityFrameworkCore
@using EventRegistration.Domain
@using Microsoft.AspNetCore.Components.Authorization
@inject IDbContextFactory<EventRegistration.Data.EventRegistrationContext> DbFactory
@inject NavigationManager NavigationManager
@inject AuthenticationStateProvider AuthenticationStateProvider

<PageTitle>Create Event</PageTitle>

<div class="container">
    <div class="page-header">
        <h1>Create New Event</h1>
        <p class="subtitle">Fill in the details below to create your event. It will be submitted for admin approval.</p>
    </div>

    <div class="content-wrapper">
        <div class="main-content">
            <div class="form-card">
                <EditForm method="post" Model="@newEvent" OnValidSubmit="@AddEvent" FormName="CreateEventForm" Enhance>
                    <DataAnnotationsValidator />
                    <ValidationSummary class="validation-summary" role="alert" />

                    <div class="form-group">
                        <label for="title" class="form-label">Event Title: <span class="required">*</span></label>
                        <InputText id="title" @bind-Value="newEvent.Title" class="form-input" placeholder="Enter event title" />
                        <ValidationMessage For="() => newEvent.Title" class="validation-error" />
                    </div>

                    <div class="form-row">
                        <div class="form-col">
                            <label for="type" class="form-label">Event Type: <span class="required">*</span></label>
                            <InputSelect id="type" @bind-Value="newEvent.Type" class="form-input">
                                <option value="">Select Type</option>
                                <option value="Physical">Physical</option>
                                <option value="Virtual">Virtual</option>
                                <option value="Hybrid">Hybrid</option>
                            </InputSelect>
                            <ValidationMessage For="() => newEvent.Type" class="validation-error" />
                        </div>

                        <div class="form-col">
                            <label for="eventdate" class="form-label">Event Date: <span class="required">*</span></label>
                            <InputDate id="eventdate" @bind-Value="newEvent.EventDate" class="form-input" />
                            <ValidationMessage For="() => newEvent.EventDate" class="validation-error" />
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-col">
                            <label for="location" class="form-label">Location: <span class="required">*</span></label>
                            <InputText id="location" @bind-Value="newEvent.Location" class="form-input" placeholder="Event location" />
                            <ValidationMessage For="() => newEvent.Location" class="validation-error" />
                        </div>

                        <div class="form-col">
                            <label for="totalcapacity" class="form-label">Total Capacity: <span class="required">*</span></label>
                            <InputNumber id="totalcapacity" @bind-Value="newEvent.TotalCapacity" class="form-input" placeholder="Maximum attendees" />
                            <ValidationMessage For="() => newEvent.TotalCapacity" class="validation-error" />
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="category" class="form-label">Category: <span class="required">*</span></label>
                        <InputSelect id="type" @bind-Value="newEvent.Type" class="form-input">
                            <option value="">Select Category</option>
                            <option value="Music">Music</option>
                            <option value="Educational">Educational</option>
                            <option value="Arts">Arts</option>
                            <option value="Professional">Professional</option>
                            <option value="Sports">Sports</option>
                            <option value="Entertainment">Entertainment</option>
                        </InputSelect>
                        <ValidationMessage For="() => newEvent.Category" class="validation-error" />
                    </div>

                    <div class="form-group">
                        <label for="description" class="form-label">Description:</label>
                        <InputTextArea id="description" @bind-Value="newEvent.Description" class="form-textarea" rows="4" placeholder="Describe your event..." />
                        <ValidationMessage For="() => newEvent.Description" class="validation-error" />
                    </div>

                    <div class="alert alert-info">
                        <span class="alert-icon">ℹ</span>
                        <div>
                            <strong>Note:</strong> Your event will be submitted with "Pending" status and requires admin approval before it becomes active.
                        </div>
                    </div>

                    <div class="button-group">
                        <button type="submit" class="btn btn-primary">
                            Create Event
                        </button>
                        <a href="/events" class="btn btn-secondary">
                            Cancel
                        </a>
                    </div>
                </EditForm>
            </div>
        </div>

        <div class="sidebar">
            <div class="info-card">
                <h5 class="info-title">
                    💡 Tips for Creating Events
                </h5>
                <ul class="tips-list">
                    <li>Use a clear and descriptive title</li>
                    <li>Provide accurate date and location</li>
                    <li>Set a realistic capacity</li>
                    <li>Write a detailed description to attract attendees</li>
                    <li>Double-check all information before submitting</li>
                </ul>
            </div>

            <div class="info-card approval-card">
                <h6 class="approval-title">
                    ⏱️ Approval Process
                </h6>
                <p class="approval-text">
                    After submission, your event will be reviewed by an administrator.
                    You'll be notified once it's approved or if any changes are needed.
                </p>
            </div>
        </div>
    </div>
</div>

@code {
    [SupplyParameterFromForm]
    private Event newEvent { get; set; } = new();

    private async Task AddEvent()
    {
        // Get the current user's email
        var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
        var currentUserEmail = authState.User.Identity?.Name;

        // Set timestamps and user info automatically
        newEvent.DateCreated = DateTime.Now;
        newEvent.DateUpdated = DateTime.Now;
        newEvent.CreatedBy = currentUserEmail;
        newEvent.UpdatedBy = currentUserEmail;
        newEvent.Status = "Pending"; // Set default status to Pending for admin approval

        using var context = DbFactory.CreateDbContext();
        context.Event.Add(newEvent);
        await context.SaveChangesAsync();

        NavigationManager.NavigateTo("/events");
    }
}