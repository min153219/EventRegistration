@page "/events/details/{id:int}"
@using Microsoft.EntityFrameworkCore
@using EventRegistration.Domain
@using Microsoft.AspNetCore.Components.Authorization
@inject IDbContextFactory<EventRegistration.Data.EventRegistrationContext> DbFactory
@inject NavigationManager NavigationManager
@inject AuthenticationStateProvider AuthenticationStateProvider

<PageTitle>Event Details</PageTitle>

<link rel="stylesheet" href="css/details-styles.css" />

<div class="details-container">
    @if (selectedEvent is null)
    {
        <div class="loading-container">
            <div class="spinner"></div>
            <p class="loading-text"><em>Loading event details...</em></p>
        </div>
    }
    else
    {
        <div class="details-header">
            <div class="header-content">
                <h1 class="header-title">@selectedEvent.Title</h1>
                <span class="badge @GetStatusBadgeClass(selectedEvent.Status)">
                    @* @if (selectedEvent.Status == "Pending")
                    {
                        
                    }
                    else if (selectedEvent.Status == "Approved")
                    {
                       
                    }
                    else if (selectedEvent.Status == "Rejected")
                    {
                        
                    } *@
                    @selectedEvent.Status
                </span>
            </div>
            <div class="header-actions">
                @if (canEdit)
                {
                    <a href="@($"/events/edit/{selectedEvent.Id}")" class="btn btn-primary">
                        Edit Event
                    </a>
                }
                <a href="/events" class="btn btn-secondary">
                    Back to List
                </a>
            </div>
        </div>

        <div class="details-layout">
            <div>
                <div class="card">
                    <div class="card-header card-header-primary">
                        <h5>Event Information</h5>
                    </div>
                    <div class="card-body">
                        <div class="info-row">
                            <div class="info-item">
                                <strong class="info-label">Event Date:</strong>
                                <p class="info-value">@selectedEvent.EventDate.ToString("MMMM dd, yyyy")</p>
                            </div>
                            <div class="info-item">
                                <strong class="info-label"> Type:</strong>
                                <p class="info-value">
                                    <span class="badge badge-info">@selectedEvent.Type</span>
                                </p>
                            </div>
                        </div>

                        <div class="info-row">
                            <div class="info-item">
                                <strong class="info-label">Location:</strong>
                                <p class="info-value">@selectedEvent.Location</p>
                            </div>
                            <div class="info-item">
                                <strong class="info-label">Total Capacity:</strong>
                                <p class="info-value">@selectedEvent.TotalCapacity</p>
                            </div>
                        </div>

                        <div class="info-row">
                            <div class="info-item" style="grid-column: 1 / -1;">
                                <strong class="info-label">Category:</strong>
                                <p class="info-value">@selectedEvent.Category</p>
                            </div>
                        </div>

                        <div class="info-row">
                            <div class="info-item" style="grid-column: 1 / -1;">
                                <strong class="info-label">Description:</strong>
                                <p class="info-description">@selectedEvent.Description</p>
                            </div>
                        </div>
                    </div>
                </div>

                @if (canEdit)
                {
                    <div class="card">
                        <div class="card-header card-header-success">
                            <h5>Quick Actions</h5>
                        </div>
                        <div class="card-body">
                            <div class="quick-actions">
                                <a href="@($"/events/{selectedEvent.Id}/tickets")" class="btn btn-outline-success">
                                    Manage Tickets
                                </a>
                                <a href="@($"/events/{selectedEvent.Id}/payments")" class="btn btn-outline-info">
                                    View Payments
                                </a>
                                <a href="@($"/events/edit/{selectedEvent.Id}")" class="btn btn-outline-primary">
                                    Edit Event
                                </a>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <div>
                <div class="card">
                    <div class="card-header card-header-secondary">
                        <h5>Audit Information</h5>
                    </div>
                    <div class="card-body">
                        <div class="audit-item">
                            <strong class="audit-label">Created By:</strong>
                            <p class="audit-value">@selectedEvent.CreatedBy</p>
                        </div>
                        <div class="audit-item">
                            <strong class="audit-label">Date Created:</strong>
                            <p class="audit-value">@selectedEvent.DateCreated.ToString("MMM dd, yyyy 'at' h:mm tt")</p>
                        </div>

                        @if (selectedEvent.DateUpdated != DateTime.MinValue)
                        {
                            <div class="audit-item">
                                <strong class="audit-label">Last Updated By:</strong>
                                <p class="audit-value">@selectedEvent.UpdatedBy</p>
                            </div>
                            <div class="audit-item">
                                <strong class="audit-label">Last Updated:</strong>
                                <p class="audit-value">@selectedEvent.DateUpdated.ToString("MMM dd, yyyy 'at' h:mm tt")</p>
                            </div>
                        }
                        else
                        {
                            <div class="audit-empty">
                                This event has not been updated yet.
                            </div>
                        }
                    </div>
                </div>

                <div class="card">
                    <div class="card-header card-header-warning">
                        <h5>Status</h5>
                    </div>
                    <div class="card-body">
                        <div class="status-display">
                            <span class="badge badge-lg @GetStatusBadgeClass(selectedEvent.Status)">
                                @* @if (selectedEvent.Status == "Pending")
                                {
                                    <span>🕐</span>
                                }
                                else if (selectedEvent.Status == "Approved")
                                {
                                    <span>✓</span>
                                }
                                else if (selectedEvent.Status == "Rejected")
                                {
                                    <span>✕</span>
                                } *@
                                @selectedEvent.Status
                            </span>

                            @if (selectedEvent.Status == "Pending")
                            {
                                <p class="status-message">
                                    This event is awaiting approval from an administrator.
                                </p>
                            }
                            else if (selectedEvent.Status == "Approved")
                            {
                                <p class="status-message">
                                    This event has been approved and is active.
                                </p>
                            }
                            else if (selectedEvent.Status == "Rejected")
                            {
                                <p class="status-message">
                                    This event has been rejected.
                                </p>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@code {
    [Parameter]
    public int Id { get; set; }

    private Event? selectedEvent;
    private bool canEdit = false;

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        selectedEvent = await context.Event
            .AsNoTracking()
            .FirstOrDefaultAsync(m => m.Id == Id);

        if (selectedEvent is null)
        {
            NavigationManager.NavigateTo("/events");
            return;
        }

        // Check if user can edit this event
        var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
        var currentUserEmail = authState.User.Identity?.Name;
        var isAdmin = authState.User.IsInRole("Administrator");

        canEdit = isAdmin || selectedEvent.CreatedBy == currentUserEmail;
    }

    private string GetStatusBadgeClass(string? status)
        => status switch
        {
            "Pending" => "badge-pending",
            "Approved" => "badge-approved",
            "Rejected" => "badge-rejected",
            _ => "badge-secondary"
        };
}