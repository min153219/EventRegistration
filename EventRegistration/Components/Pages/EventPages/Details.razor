@page "/events/details/{id:int}"
@using Microsoft.EntityFrameworkCore
@using EventRegistration.Domain
@using Microsoft.AspNetCore.Components.Authorization
@inject IDbContextFactory<EventRegistration.Data.EventRegistrationContext> DbFactory
@inject NavigationManager NavigationManager
@inject AuthenticationStateProvider AuthenticationStateProvider

<PageTitle>Event Details</PageTitle>

<link href="/Details.razor.css" rel="stylesheet" />

<div class="container">
    @if (selectedEvent is null)
    {
        <div class="loading-center">
            <div class="spinner"></div>
            <p><em>Loading event details...</em></p>
        </div>
    }
    else
    {
        <div class="details-top">
            <div class="details-top-left">
                <h1>@selectedEvent.Title</h1>
                <span class="badge @GetStatusBadgeClass(selectedEvent.Status)">
                    @selectedEvent.Status
                </span>
            </div>
            <div class="details-top-right">
                @if (canEdit)
                {
                    <a href="@($"/events/edit/{selectedEvent.Id}")" class="btn btn-primary">
                        Edit Event
                    </a>
                }
                <a href="/events" class="btn btn-secondary">
                    Back to List
                </a>
            </div>
        </div>

        <div class="details-layout">
            <div class="details-main">
                <div class="details-card">
                    <div class="details-card-header header-blue">
                        <h5>Event Information</h5>
                    </div>
                    <div class="details-card-body">
                        <div class="info-grid">
                            <div class="info-item">
                                <strong>Event Date:</strong>
                                <p>@selectedEvent.EventDate.ToString("MMMM dd, yyyy")</p>
                            </div>
                            <div class="info-item">
                                <strong>Type:</strong>
                                <p>
                                    <span class="badge badge-info">@selectedEvent.Type</span>
                                </p>
                            </div>
                            <div class="info-item">
                                <strong>Location:</strong>
                                <p>@selectedEvent.Location</p>
                            </div>
                            <div class="info-item">
                                <strong>Total Capacity:</strong>
                                <p>@selectedEvent.TotalCapacity</p>
                            </div>
                            <div class="info-item info-item-full">
                                <strong>Category:</strong>
                                <p>@selectedEvent.Category</p>
                            </div>
                            <div class="info-item info-item-full">
                                <strong>Description:</strong>
                                <p class="description-text">@selectedEvent.Description</p>
                            </div>
                        </div>
                    </div>
                </div>

                @if (canEdit)
                {
                    <div class="details-card">
                        <div class="details-card-header header-green">
                            <h5>Quick Actions</h5>
                        </div>
                        <div class="details-card-body">
                            <div class="quick-actions">
                                <a href="@($"/events/{selectedEvent.Id}/tickets")" class="btn btn-outline btn-outline-green">
                                    Manage Tickets
                                </a>
                                <a href="@($"/events/{selectedEvent.Id}/payments")" class="btn btn-outline btn-outline-blue">
                                    View Payments
                                </a>
                                <a href="@($"/events/edit/{selectedEvent.Id}")" class="btn btn-outline btn-outline-purple">
                                    Edit Event
                                </a>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <div class="details-sidebar">
                <div class="details-card">
                    <div class="details-card-header header-gray">
                        <h5>Audit Information</h5>
                    </div>
                    <div class="details-card-body">
                        <div class="audit-row">
                            <strong>Created By:</strong>
                            <p>@selectedEvent.CreatedBy</p>
                        </div>
                        <div class="audit-row">
                            <strong>Date Created:</strong>
                            <p>@selectedEvent.DateCreated.ToString("MMM dd, yyyy 'at' h:mm tt")</p>
                        </div>

                        @if (selectedEvent.DateUpdated != DateTime.MinValue)
                        {
                            <div class="audit-row">
                                <strong>Last Updated By:</strong>
                                <p>@selectedEvent.UpdatedBy</p>
                            </div>
                            <div class="audit-row">
                                <strong>Last Updated:</strong>
                                <p>@selectedEvent.DateUpdated.ToString("MMM dd, yyyy 'at' h:mm tt")</p>
                            </div>
                        }
                        else
                        {
                            <p class="not-updated-text">This event has not been updated yet.</p>
                        }
                    </div>
                </div>

                <div class="details-card">
                    <div class="details-card-header header-yellow">
                        <h5>Status</h5>
                    </div>
                    <div class="details-card-body">
                        <div class="status-center">
                            <span class="badge badge-large @GetStatusBadgeClass(selectedEvent.Status)">
                                @selectedEvent.Status
                            </span>

                            @if (selectedEvent.Status == "Pending")
                            {
                                <p class="status-description">This event is awaiting approval from an administrator.</p>
                            }
                            else if (selectedEvent.Status == "Approved")
                            {
                                <p class="status-description">This event has been approved and is active.</p>
                            }
                            else if (selectedEvent.Status == "Rejected")
                            {
                                <p class="status-description">This event has been rejected.</p>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@code {
    [Parameter]
    public int Id { get; set; }

    private Event? selectedEvent;
    private bool canEdit = false;

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        selectedEvent = await context.Event
            .AsNoTracking()
            .FirstOrDefaultAsync(m => m.Id == Id);

        if (selectedEvent is null)
        {
            NavigationManager.NavigateTo("/events");
            return;
        }

        // Check if user can edit this event
        var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
        var currentUserEmail = authState.User.Identity?.Name;
        var isAdmin = authState.User.IsInRole("Administrator");

        canEdit = isAdmin || selectedEvent.CreatedBy == currentUserEmail;
    }

    private string GetStatusBadgeClass(string? status)
        => status switch
        {
            "Pending" => "badge-pending",
            "Approved" => "badge-approved",
            "Rejected" => "badge-rejected",
            _ => "badge-default"
        };
}