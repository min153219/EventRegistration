@page "/admin/dashboard"
@rendermode InteractiveServer
@using Microsoft.EntityFrameworkCore
@using EventRegistration.Domain
@using EventRegistration.Data
@using Microsoft.AspNetCore.Components.Authorization
@attribute [Authorize(Roles = "Administrator")]
@implements IAsyncDisposable
@inject IDbContextFactory<EventRegistrationContext> DbFactory
@inject AuthenticationStateProvider AuthenticationStateProvider
@inject NavigationManager Navigation

<PageTitle>Admin Dashboard</PageTitle>

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col">
            <h1><i class="bi bi-speedometer2 me-2"></i>Admin Dashboard</h1>
            <p class="text-muted">Overview of your event management system</p>
        </div>
    </div>

    @if (isLoading)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
    }
    else
    {
        <!-- Metric Cards -->
        <div class="row g-4 mb-4">
            <!-- Total Events Card -->
            <div class="col-md-4 col-lg">
                <div class="card metric-card h-100 border-0 shadow-sm">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start">
                            <div>
                                <h6 class="text-muted mb-2">Total Events</h6>
                                <h2 class="mb-0 fw-bold">@totalEvents</h2>
                                <small class="text-muted">
                                    @pendingCount Pending, @approvedCount Approved
                                </small>
                            </div>
                            <div class="metric-icon bg-primary">
                                <i class="bi bi-calendar-event"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Pending Approvals Card -->
            <div class="col-md-4 col-lg">
                <div class="card metric-card h-100 border-0 shadow-sm clickable" @onclick="GoToManageEvents">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start">
                            <div>
                                <h6 class="text-muted mb-2">Pending Approvals</h6>
                                <h2 class="mb-0 fw-bold text-warning">@pendingCount</h2>
                                <small class="text-muted">Events awaiting review</small>
                            </div>
                            <div class="metric-icon bg-warning">
                                <i class="bi bi-clock-history"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Approved Events Card -->
            <div class="col-md-4 col-lg">
                <div class="card metric-card h-100 border-0 shadow-sm">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start">
                            <div>
                                <h6 class="text-muted mb-2">Approved Events</h6>
                                <h2 class="mb-0 fw-bold text-success">@approvedCount</h2>
                                <small class="text-muted">Active events</small>
                            </div>
                            <div class="metric-icon bg-success">
                                <i class="bi bi-check-circle"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Total Users Card -->
            <div class="col-md-4 col-lg">
                <div class="card metric-card h-100 border-0 shadow-sm clickable" @onclick='() => activeTab = "users"'>
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start">
                            <div>
                                <h6 class="text-muted mb-2">Total Users</h6>
                                <h2 class="mb-0 fw-bold text-info">@totalUsers</h2>
                                <small class="text-muted">Registered organizers</small>
                            </div>
                            <div class="metric-icon bg-info">
                                <i class="bi bi-people"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Total Registrations Card -->
            <div class="col-md-4 col-lg">
                <div class="card metric-card h-100 border-0 shadow-sm">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start">
                            <div>
                                <h6 class="text-muted mb-2">Total Registrations</h6>
                                <h2 class="mb-0 fw-bold text-purple">@totalRegistrations</h2>
                                <small class="text-muted">Across all events</small>
                            </div>
                            <div class="metric-icon bg-purple">
                                <i class="bi bi-ticket-perforated"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Tabs Section -->
        <div class="card border-0 shadow-sm mb-4">
            <div class="card-header bg-white border-bottom">
                <ul class="nav nav-tabs card-header-tabs">
                    <li class="nav-item">
                        <button class="nav-link @(activeTab == "events" ? "active" : "")"
                                @onclick='() => activeTab = "events"'>
                            <i class="bi bi-calendar-event me-2"></i>Recent Events
                        </button>
                    </li>
                    <li class="nav-item">
                        <button class="nav-link @(activeTab == "users" ? "active" : "")"
                                @onclick='() => activeTab = "users"'>
                            <i class="bi bi-people me-2"></i>User Management
                        </button>
                    </li>
                </ul>
            </div>
            <div class="card-body">
                @if (activeTab == "events")
                {
                    <!-- Recent Events Table -->
                    <h5 class="mb-3">Recent Event Submissions</h5>
                    @if (recentEvents != null && recentEvents.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Event Title</th>
                                        <th>Organizer</th>
                                        <th>Category</th>
                                        <th>Date Submitted</th>
                                        <th>Status</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var evt in recentEvents)
                                    {
                                        <tr>
                                            <td>@evt.Title</td>
                                            <td><small>@evt.CreatedBy</small></td>
                                            <td>@evt.Category</td>
                                            <td>@evt.DateCreated.ToString("MMM dd, yyyy")</td>
                                            <td>
                                                <span class="badge @GetStatusBadgeClass(evt.Status) px-2 py-1">
                                                    @evt.Status
                                                </span>
                                            </td>
                                            <td>
                                                <div class="btn-group btn-group-sm">
                                                    @if (evt.Status == "Pending")
                                                    {
                                                        <button class="btn btn-success" @onclick="() => QuickApprove(evt.Id)">
                                                            <i class="bi bi-check"></i>
                                                        </button>
                                                        <button class="btn btn-danger" @onclick="() => ShowQuickRejectModal(evt)">
                                                            <i class="bi bi-x"></i>
                                                        </button>
                                                    }
                                                    <a href="@($"/events/details/{evt.Id}")" class="btn btn-outline-secondary">
                                                        <i class="bi bi-eye"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <p class="text-muted">No recent events</p>
                    }
                }
                else
                {
                    <!-- User Management Table -->
                    <h5 class="mb-3">User Management</h5>
                    @if (users != null && users.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Name</th>
                                        <th>Email</th>
                                        <th>Events Created</th>
                                        <th>Join Date</th>
                                        <th>Status</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var user in users)
                                    {
                                        <tr>
                                            <td>@user.Name</td>
                                            <td><small>@user.Email</small></td>
                                            <td>@user.EventCount events</td>
                                            <td>@user.JoinDate.ToString("MMM dd, yyyy")</td>
                                            <td>
                                                <span class="badge @(user.IsBanned ? "bg-danger" : "bg-success") px-2 py-1">
                                                    @(user.IsBanned ? "Banned" : "Active")
                                                </span>
                                            </td>
                                            <td>
                                                <div class="btn-group btn-group-sm">
                                                    @if (user.IsBanned)
                                                    {
                                                        <button class="btn btn-success" @onclick="() => UnbanUser(user.Email)" title="Unban User">
                                                            <i class="bi bi-unlock"></i> Unban
                                                        </button>
                                                    }
                                                    else
                                                    {
                                                        <button class="btn btn-danger" @onclick="() => ShowBanUserModal(user)" title="Ban User">
                                                            <i class="bi bi-lock"></i> Ban
                                                        </button>
                                                    }
                                                    <button class="btn btn-outline-primary" @onclick="() => ViewUserEvents(user.Email)" title="View Events">
                                                        <i class="bi bi-eye"></i>
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <p class="text-muted">No users found</p>
                    }
                }
            </div>
        </div>

        <!-- Bottom Info Cards -->
        <div class="row g-4">
            <!-- Upcoming Events -->
            <div class="col-md-6">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-header bg-white border-bottom">
                        <h6 class="mb-0"><i class="bi bi-calendar-event me-2"></i>Upcoming Events</h6>
                    </div>
                    <div class="card-body">
                        @if (upcomingEvents != null && upcomingEvents.Any())
                        {
                            <ul class="list-unstyled mb-0">
                                @foreach (var evt in upcomingEvents.Take(5))
                                {
                                    <li class="mb-3 pb-3 border-bottom">
                                        <div class="d-flex justify-content-between">
                                            <strong>@evt.Title</strong>
                                            <small class="text-muted">@evt.EventDate.ToString("MMM dd")</small>
                                        </div>
                                        <small class="text-muted">@evt.Location</small>
                                    </li>
                                }
                            </ul>
                        }
                        else
                        {
                            <p class="text-muted mb-0">No upcoming events</p>
                        }
                    </div>
                </div>
            </div>

            <!-- Recent Users -->
            <div class="col-md-6">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-header bg-white border-bottom">
                        <h6 class="mb-0"><i class="bi bi-people me-2"></i>Recent Users</h6>
                    </div>
                    <div class="card-body">
                        @if (recentUsers != null && recentUsers.Any())
                        {
                            <ul class="list-unstyled mb-0">
                                @foreach (var user in recentUsers.Take(5))
                                {
                                    <li class="mb-3 pb-3 border-bottom">
                                        <div class="d-flex justify-content-between align-items-center">
                                            <div>
                                                <strong>@user.Name</strong>
                                                <br>
                                                <small class="text-muted">@user.Email</small>
                                            </div>
                                            <small class="text-muted">@user.JoinDate.ToString("MMM dd")</small>
                                        </div>
                                    </li>
                                }
                            </ul>
                        }
                        else
                        {
                            <p class="text-muted mb-0">No recent users</p>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<!-- Quick Reject Modal -->
@if (showQuickRejectModal && selectedEvent != null)
{
    <div class="modal-backdrop fade show" @onclick="CloseModals"></div>
    <div class="modal fade show d-block" tabindex="-1" style="z-index: 1055;">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title">Quick Reject Event</h5>
                    <button type="button" class="btn-close btn-close-white" @onclick="CloseModals"></button>
                </div>
                <div class="modal-body">
                    <p><strong>Event:</strong> @selectedEvent.Title</p>
                    <div class="mb-3">
                        <label class="form-label fw-bold">Reason for Rejection (Required):</label>
                        <textarea @bind="quickRejectReason" class="form-control" rows="3"
                                  placeholder="Provide a reason..."></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="CloseModals">Cancel</button>
                    <button type="button" class="btn btn-danger" @onclick="QuickReject"
                            disabled="@string.IsNullOrWhiteSpace(quickRejectReason)">
                        Reject Event
                    </button>
                </div>
            </div>
        </div>
    </div>
}

<!-- Ban User Modal -->
@if (showBanUserModal && selectedUser != null)
{
    <div class="modal-backdrop fade show" @onclick="CloseModals"></div>
    <div class="modal fade show d-block" tabindex="-1" style="z-index: 1055;">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title">Ban User</h5>
                    <button type="button" class="btn-close btn-close-white" @onclick="CloseModals"></button>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to ban this user?</p>
                    <div class="alert alert-warning">
                        <strong>User:</strong> @selectedUser.Name (@selectedUser.Email)<br>
                        <strong>Events Created:</strong> @selectedUser.EventCount<br><br>
                        <small>This will prevent the user from logging in and hide their events from public view.</small>
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">Reason for Ban (Optional):</label>
                        <textarea @bind="banReason" class="form-control" rows="2"
                                  placeholder="Reason for banning..."></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="CloseModals">Cancel</button>
                    <button type="button" class="btn btn-danger" @onclick="BanUser">
                        Ban User
                    </button>
                </div>
            </div>
        </div>
    </div>
}

