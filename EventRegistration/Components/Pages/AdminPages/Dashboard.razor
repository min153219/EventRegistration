@code {
    private EventRegistrationContext context = default!;
    private string? currentAdminEmail;
    private bool isLoading = true;
    private string activeTab = "events";

    // Metrics
    private int totalEvents = 0;
    private int pendingCount = 0;
    private int approvedCount = 0;
    private int rejectedCount = 0;
    private int totalUsers = 0;
    private int totalRegistrations = 0;

    // Data
    private List<Event>? recentEvents;
    private List<Event>? upcomingEvents;
    private List<UserSummary>? users;
    private List<UserSummary>? recentUsers;

    // Modals
    private bool showQuickRejectModal = false;
    private bool showBanUserModal = false;
    private Event? selectedEvent;
    private UserSummary? selectedUser;
    private string quickRejectReason = string.Empty;
    private string banReason = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        context = DbFactory.CreateDbContext();
        var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
        currentAdminEmail = authState.User.Identity?.Name;
        await LoadDashboardData();
        isLoading = false;
    }

    private async Task LoadDashboardData()
    {
        // Load metrics
        var allEvents = await context.Event.ToListAsync();
        totalEvents = allEvents.Count;
        pendingCount = allEvents.Count(e => e.Status == "Pending");
        approvedCount = allEvents.Count(e => e.Status == "Approved");
        rejectedCount = allEvents.Count(e => e.Status == "Rejected");

        // Load recent events
        recentEvents = await context.Event
            .OrderByDescending(e => e.DateCreated)
            .Take(10)
            .ToListAsync();

        // Load upcoming events
        upcomingEvents = await context.Event
            .Where(e => e.Status == "Approved" && e.EventDate >= DateTime.Now)
            .OrderBy(e => e.EventDate)
            .Take(5)
            .ToListAsync();

        // Load users data
        var userEmails = await context.Event
            .Select(e => e.CreatedBy)
            .Distinct()
            .ToListAsync();

        users = new List<UserSummary>();
        foreach (var email in userEmails.Where(e => !string.IsNullOrEmpty(e)))
        {
            var userEvents = allEvents.Where(e => e.CreatedBy == email).ToList();
            var firstEvent = userEvents.OrderBy(e => e.DateCreated).FirstOrDefault();

            users.Add(new UserSummary
            {
                Email = email!,
                Name = email!.Split('@')[0], // Use email prefix as name
                EventCount = userEvents.Count,
                JoinDate = firstEvent?.DateCreated ?? DateTime.Now,
                IsBanned = false // You'll need to add a Users table to track this properly
            });
        }

        totalUsers = users.Count;
        recentUsers = users.OrderByDescending(u => u.JoinDate).Take(5).ToList();

        // Load total registrations (you'll need to implement based on your Registration/Ticket table)
        totalRegistrations = 0; // Update this based on your data model
    }

    private void GoToManageEvents()
    {
        Navigation.NavigateTo("/admin/manage-events");
    }

    private async Task QuickApprove(int eventId)
    {
        var evt = await context.Event.FindAsync(eventId);
        if (evt != null)
        {
            evt.Status = "Approved";
            evt.ReviewedBy = currentAdminEmail;
            evt.ReviewedDate = DateTime.Now;
            evt.DateUpdated = DateTime.Now;
            evt.UpdatedBy = currentAdminEmail;
            await context.SaveChangesAsync();
            await LoadDashboardData();
            StateHasChanged();
        }
    }

    private void ShowQuickRejectModal(Event evt)
    {
        selectedEvent = evt;
        quickRejectReason = string.Empty;
        showQuickRejectModal = true;
    }

    private async Task QuickReject()
    {
        if (selectedEvent == null || string.IsNullOrWhiteSpace(quickRejectReason)) return;

        var evt = await context.Event.FindAsync(selectedEvent.Id);
        if (evt != null)
        {
            evt.Status = "Rejected";
            evt.ReviewedBy = currentAdminEmail;
            evt.ReviewedDate = DateTime.Now;
            evt.RejectionReason = quickRejectReason.Trim();
            evt.DateUpdated = DateTime.Now;
            evt.UpdatedBy = currentAdminEmail;
            await context.SaveChangesAsync();
            CloseModals();
            await LoadDashboardData();
            StateHasChanged();
        }
    }

    private void ShowBanUserModal(UserSummary user)
    {
        selectedUser = user;
        banReason = string.Empty;
        showBanUserModal = true;
    }

    private async Task BanUser()
    {
        if (selectedUser == null) return;

        // Note: You'll need to implement proper user banning in your User table
        // For now, this is a placeholder
        Console.WriteLine($"Banning user: {selectedUser.Email}. Reason: {banReason}");

        CloseModals();
        StateHasChanged();
    }

    private async Task UnbanUser(string email)
    {
        // Note: You'll need to implement proper user unbanning in your User table
        Console.WriteLine($"Unbanning user: {email}");
        StateHasChanged();
    }

    private void ViewUserEvents(string email)
    {
        Navigation.NavigateTo($"/admin/user-events?email={email}");
    }

    private void CloseModals()
    {
        showQuickRejectModal = false;
        showBanUserModal = false;
        selectedEvent = null;
        selectedUser = null;
        quickRejectReason = string.Empty;
        banReason = string.Empty;
        StateHasChanged();
    }

    private string GetStatusBadgeClass(string? status)
        => status switch
        {
            "Pending" => "bg-warning text-dark",
            "Approved" => "bg-success text-white",
            "Rejected" => "bg-danger text-white",
            _ => "bg-secondary text-white"
        };

    public async ValueTask DisposeAsync() => await context.DisposeAsync();

    // Helper class for user data
    public class UserSummary
    {
        public string Email { get; set; } = string.Empty;
        public string Name { get; set; } = string.Empty;
        public int EventCount { get; set; }
        public DateTime JoinDate { get; set; }
        public bool IsBanned { get; set; }
    }
}